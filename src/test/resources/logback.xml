<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <filter class="ch.qos.logback.core.filter.EvaluatorFilter">
            <evaluator>
                <expression>
                    return logger.contains("org.apache.http") ||
                    logger.equals("org.jvnet.hk2.logger");
                </expression>
            </evaluator>
            <onMatch>DENY</onMatch>
        </filter>
        <encoder>

            <!-- no colors -->
            <!--pattern>%-5level %d{HH:mm:ss.SSS} [%thread]
                %class{16}.%M\(%L\):%n%msg%n%n
            </pattern-->

            <!-- colors -->
            <pattern>%highlight(%-5level) %gray(%d{HH:mm:ss.SSS}) [%thread]
                %green(%class{16}.%M\(%L\)):%cyan(%n%msg%n%n)
            </pattern>
        </encoder>
    </appender>

    <root level="${loggerLevel}">
        <!--<root level="info">-->
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>